{
    "scripts": {
        "watch:s:elm": "elm-live src/Single.elm --port=8088 --open --start-page=index.html --dir=. -- --output=main.js --debug",
        "watch:m:elm": "elm-live src/Multiple.elm --port=8088 --open --start-page=index.html --dir=. -- --output=main.js --debug",
        "watch:s:sass": "sass --watch src/single.scss:./single.css",
        "watch:m:sass": "sass --watch src/multiple.scss:./multiple.css",
        "prewatch": "sass src:./",
        "s": "npm-run-all -p watch:s:*",
        "m": "npm-run-all -p watch:m:*"
    },
    "devDependencies": {
        "elm": "^0.19.1-3",
        "elm-live": "^4.0.2",
        "npm-run-all": "^4.1.5",
        "sass": "^1.26.3"
    }
}
